<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="ClickingGame.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:ClickingGame"
    xmlns:views="clr-namespace:ClickingGame.Views"
    Shell.NavBarIsVisible="False" Title="Clicker Game">

    <TabBar Title="Menu">
        <Tab Title="Clicker" Icon="click.png">
            <ShellContent
            Title="Clicker"
            ContentTemplate="{DataTemplate views:ClickerView}"
            Route="Clicker" />
        </Tab>
        <Tab Title="Shop" Icon="cart.png">
            <ShellContent
            Title="Shop"
            ContentTemplate="{DataTemplate views:ShopView}"
            Route="Shop" />
        </Tab>
        <Tab Title="Profile" Icon="user.png">
            <ShellContent
            Title="Profile"
            ContentTemplate="{DataTemplate views:ProfileView}"
            Route="Profile" />
        </Tab>


    </TabBar>

</Shell>
